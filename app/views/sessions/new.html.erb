<h1>Login</h1>

<% if flash[:error] %>
    <section class='error'><%= flash[:error]%></section>
<% end %>
<%= form_with do %>
    <%= label_tag :email %>
    <%= email_field_tag :email%>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Login" %>
<% end %>
<br>
<%= link_to('Log in with Facebook!', '/auth/facebook') %>