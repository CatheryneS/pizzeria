<%= render partial: "layouts/errors", locals: {object: @user} %>

<%= form_for @user do |f| %>

    <section>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </section>

    <section>
        <%= f.label :email %>
        <%= f.email_field :email %>
    </section>

    <section>
        <%= f.label :phone %>
        <%= f.telephone_field :phone %>
    </section>    

    <% if !logged_in?%>
      <section>
          <%= f.label :password %>
          <%= f.password_field :password %>
      </section>

      <section>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
      </section>
    <% end %>
    
    <section>
        <%= f.submit %>
    </section>
   
<% end %>