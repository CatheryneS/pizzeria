<h1><%= @review.pizza.name %></h1>

<h3><%= @review.user.name%> said:</h3>

<h4>Rating: <%= @review.rating %> stars </h4>
<p><%= @review.content %></p>

<%= link_to 'Back to pizza', pizza_path(@review.pizza) %> | <%= link_to 'Back to pizzas', pizzas_path %> 

<% if current_user == @review.user %>
   | <%= link_to 'Edit', edit_review_path(@review) %> |
    <%= link_to 'Delete', review_path, method: :delete, data: {confirm: "Are you sure you want to delete your review?"} %>
<% end %>
