<h1>Edit your review on </h1>

<%= render partial: "layouts/errors", locals: {object: @review} %>

<%= form_for(@review) do |f| %>
   <section>
        <%= f.label :rating%>
        <%= f.number_field :rating, within: 1...6%>
   </section> 
   
   <section>
        <%= f.label :content, "Review:"%> <br>
        <%= f.text_area(:content, max: 250, min: 2) %>
   </section> 

   <section>
        <%= f.submit "Submit Review"%>
   </section>
<% end %>