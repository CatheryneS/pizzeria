<%= render partial: "layouts/errors", locals: {object: @pizza} %>

<%= form_with model: @pizza do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br> <br>
    
    <%= f.fields_for :topping do |t|%>
        <%= t.label "Toppings" %> <br>
        <%= t.collection_select :topping_id, Topping.all, :id, :name%>
    <% end %>
    <br> <br>

    <%= f.label :description %> <br>
    <%= f.text_area :description %> <br> <br>
    <%= f.submit %>
<% end %>