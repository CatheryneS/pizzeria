<h1>Pizzas</h1>

<%= form_tag pizzas_path, :method => 'get' do%>
<%= text_field_tag :query, params[:query] %>
<%= submit_tag "Search"%>
<% end %>

<br>
<h2>Our Creations </h2>

<%if @pizzas.empty? %>
    <p>Hmmm... The chief hasn't baked "<%= params[:query] %>" pizza before.</p>
<% else %>
    <% @pizzas.each do |pizza| %>
        <section>
            <h3><%= link_to pizza.name, pizza_path(pizza) %></h3>
            <p><%= pizza.description%></p>
        </section>
    <% end %>
<% end %>
<br>
<% if logged_in? %>
    <h2>Your Creations </h2>
    <h3><%= link_to 'Create your own', new_order_path %></h3>
    <% @user.pizzas.each do |pizza| %>
        <section>
         <h3><%= link_to pizza.name, pizza_path(pizza) %></h3>
        <p><%= pizza.description%></p>
        </section>
    <% end %>
    
<% end %>